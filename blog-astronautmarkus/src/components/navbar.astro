<nav class="w-full fixed top-0 left-0 bg-[#c5c1c0] z-50">
    <div class="max-w-5xl mx-auto flex items-center justify-between px-4 py-2">
        <a href="/" class="flex items-center gap-2">
            <img src="/img/pixel-logo-ver.png" alt="AstronautMarkusDev character" class="h-9 md:h-16" />
            <span class="font-semibold text-lg hover:underline md:text-lg text-base">Blog.AstronautMarkus.Dev</span>
        </a>

        <button id="navbar-burger" class="md:hidden flex items-center px-2 py-1 text-gray-700 rounded hover:bg-gray-100 transition" aria-label="Open menu">
            <svg class="h-7 w-7" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16"/>
            </svg>
        </button>

        <div class="hidden md:flex flex-row items-center gap-4">
            <a class="text-black hover:underline px-4 py-2 font-semibold" href="/">Home</a>
            <a class="text-black hover:underline px-4 py-2 font-semibold" href="/posts">Posts</a>
            <a class="text-black hover:underline px-4 py-2 font-semibold" href="/author-notes">Author Notes</a>
        </div>
    </div>

    <div id="navbar-menu"
        class="fixed top-0 left-0 h-full w-64 bg-[#c5c1c0] shadow-lg z-50 transform -translate-x-full transition-transform duration-300 md:hidden flex flex-col pt-20 gap-2"
        style="will-change: transform;"
    >
        <button id="navbar-close" class="absolute top-4 right-4 text-gray-700 hover:bg-gray-100 rounded p-2" aria-label="Close menu">
            <svg class="h-6 w-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/>
            </svg>
        </button>
        <a class="text-black hover:bg-blue-100 hover:text-blue-700 px-6 py-3 rounded transition font-semibold" href="/">Home</a>
