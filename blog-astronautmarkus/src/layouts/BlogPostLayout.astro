---
import Navbar from "../components/navbar.astro";
import Footer from "../components/footer.astro";
import SharePost from "../components/sharePost.astro";

import PostStats from "../components/postStats.jsx";

const { frontmatter } = Astro.props;

const { 
    title = "Untitled Post",
    description = "No description available.",
    image = "/img/banner-en.png",
    errorImage = "/img/error-banner.png",
    imageAlt = "Blog Banner Image",
    author = "AstronautMarkus",
    publishDate,
    pubDate,
    modifiedDate,
    canonical,
    noindex = false,
    type = "article",
    tags = [],
} = frontmatter || {};

import "../css/global.css";
import "../css/markdown.css";

const finalPublishDate = publishDate || pubDate;

const url = Astro.url.pathname;

const slug = url.replace(/^\/|\/$/g, '').replace(/^(posts\/|blogs\/)/, '');

const API_URL = import.meta.env.API_URL

const siteUrl = import.meta.env.SITE_URL || "https://blog.astronautmarkus.dev";
const siteName = import.meta.env.SITE_NAME || "blog.astronautmarkus.dev";

const currentUrl = new URL(Astro.request.url);
const canonicalUrl = canonical || new URL(currentUrl.pathname, siteUrl).href;
const bannerImage = new URL(image, siteUrl).href;

const formatDate = (dateString: string) => {
    if (!dateString) return "Date not available";
    
    if (dateString.match(/^\d{4}-\d{2}-\d{2}$/)) {
        const [year, month, day] = dateString.split('-').map(Number);
        const date = new Date(year, month - 1, day);
        return date.toLocaleDateString('en-US', { 
            year: 'numeric', 
            month: 'long', 
            day: 'numeric' 
        });
    }
    
    const date = new Date(dateString);
    return date.toLocaleDateString('en-US', { 
        year: 'numeric', 
        month: 'long', 
        day: 'numeric' 
    });
};

const tagColors = [
    'bg-[#df0024] text-white',
    'bg-[#f3c300] text-black',
    'bg-[#00ab9f] text-white',
    'bg-[#2e6db4] text-white',
    'bg-[#2e6db4] text-white'
];

const structuredData = {
    "@context": "https://schema.org",
    "@type": "BlogPosting",
    "headline": title,
    "description": description,
    "image": bannerImage,
    "author": {
        "@type": "Person",
        "name": author,
        "url": "https://astronautmarkus.dev"
    },
    "publisher": {
        "@type": "Organization",
        "name": siteName,
        "logo": {
            "@type": "ImageObject",
            "url": `${siteUrl}/logo.png`
        }
    },
    "url": canonicalUrl,
    "mainEntityOfPage": {
        "@type": "WebPage",
        "@id": canonicalUrl
    },
    ...(finalPublishDate && { "datePublished": finalPublishDate }),
    ...(modifiedDate && { "dateModified": modifiedDate }),
    ...(tags.length > 0 && { "keywords": tags.join(", ") })
};
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        
        <title>{title}</title>
        <meta name="description" content={description} />
        <meta name="author" content={author} />
        {tags && tags.length > 0 && <meta name="keywords" content={tags.join(", ")} />}
        {noindex && <meta name="robots" content="noindex, nofollow" />}
        
        <link rel="canonical" href={canonicalUrl} />
        
        <meta property="og:type" content={type} />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content={bannerImage} />
        <meta property="og:image:alt" content={imageAlt} />
        <meta property="og:url" content={canonicalUrl} />
        <meta property="og:site_name" content={siteName} />
        <meta property="og:locale" content="en_US" />
        
        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:site" content="@astronautmarkus" />
        <meta name="twitter:creator" content="@astronautmarkus" />
        <meta name="twitter:title" content={title} />
        <meta name="twitter:description" content={description} />
        <meta name="twitter:image" content={bannerImage} />
        <meta name="twitter:image:alt" content={imageAlt} />

        <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/devicon.min.css" />

        
        {type === "article" && finalPublishDate && (
            <meta property="article:published_time" content={finalPublishDate} />
        )}
        {type === "article" && modifiedDate && (
            <meta property="article:modified_time" content={modifiedDate} />
        )}
        {type === "article" && (
            <meta property="article:author" content={author} />
        )}
        {type === "article" && tags && tags.map((tag:any) => (
            <meta property="article:tag" content={tag} />
        ))}
        
        <link rel="icon" type="image/svg+xml" href="/favicon.png" />
        <link rel="icon" type="image/png" href="/favicon.png" />
        <link rel="apple-touch-icon" href="/favicon.png" />
        
        <meta name="theme-color" content="#3273dc" />
        <meta name="color-scheme" content="light" />
        
        <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />

        
        <style>
            html, body {
                height: 100%;
            }
            body {
                display: flex;
                flex-direction: column;
            }
            .main-content {
                flex: 1;
            }
        </style>
    </head>
    <body class="flex flex-col min-h-screen bg-[#ADADAD] text-gray-900">
        <Navbar />

        <section class="main-content flex-1 py-8 mt-8">
            <div class="container mx-auto px-4">
                <div class="flex justify-center gap-4">

                    <div class="hidden lg:block w-12"></div>
                    
                    <div class="w-full max-w-4xl">
                        <article class="markdown-post">
                            <header class="markdown-header mb-8">
                                <h1 class="text-4xl font-bold mb-4 mt-12 playstation-fonts text-gray-800">{title}</h1>

                                <div class="markdown-hero-image mb-6">
                                    <figure>
                                        <img 
                                            src={image} 
                                            alt={imageAlt} 
                                            onerror={`this.src='${errorImage}'; this.onerror=null;`}
                                            class="shadow-lg w-full object-cover"
                                        />
                                    </figure>
                                </div>

                                <p class="text-lg text-black mb-6 italic">"{description}"</p>

                                {tags && tags.length > 0 && (
                                    <div class="flex flex-wrap gap-2 mb-4">
                                        {tags.map((tag: string, index: number) => (
                                            <span class={`px-3 py-1 text-xs font-semibold shadow-lg ${tagColors[index % tagColors.length]}`}>{tag}</span>
                                        ))}
                                    </div>
                                )}

                                <div class="markdown-dates mt-2 space-y-1">
                                    {finalPublishDate ? (
                                        <p class="text-black text-xs">
                                            <strong>Published:</strong> {formatDate(finalPublishDate)}
                                        </p>
                                    ) : (
                                        <p class="text-black text-xs">
                                            <strong>Published:</strong> Date not available
                                        </p>
                                    )}
                                    {modifiedDate && (
                                        <p class="text-black text-xs">
                                            <strong>Modified:</strong> {formatDate(modifiedDate)}
                                        </p>
                                    )}
                                </div>
                            </header>

                            <div class="content markdown-content prose max-w-none">
                                <slot />
                            </div>

                            <SharePost 
                                title={title}
                                description={description}
                                url={canonicalUrl}
                            />

                            <footer class="markdown-author-footer mt-10 pt-6 border-t border-gray-200">
                                <div class="flex items-center">
                                    <div>
                                        <img class="shadow-lg border border-[#c5c1c0] w-12 h-12" src="https://github.com/astronautmarkus.png" alt="AstronautMarkus Profile" />
                                    </div>
                                    <div class="ml-4">
                                        <p class="text-black text-base mb-0 playstation-fonts text-gray-800">
                                            <strong>AstronautMarkusDev</strong> <span class="text-sm">(Marcos Reyes M.)</span>
                                        </p>
                                    </div>
                                </div>
                            </footer>
                        </article>
                    </div>
                    
                    <aside class="hidden lg:block w-64 sticky top-24 h-[85vh] overflow-y-auto ml-12">
                        <PostStats API_URL={API_URL} slug={slug} client:load />
                        <nav id="toc" class="bg-[#c5c1c0] p-4 text-sm shadow-lg">
                            <h2 class="font-bold mb-2 playstation-fonts text-gray-800 md:text-xl text-center">Table of Contents</h2>
                            <ul id="toc-list" class="space-y-1"></ul>
                        </nav>
                    </aside>
                </div>
            </div>
        </section>

        <Footer />


        <script>
            // Image error handling function
            function handleImageError(img:any, fallbackSrc:any) {
                if (img.src !== fallbackSrc) {
                    img.src = fallbackSrc;
                    img.onerror = null;
                }
            }

            // Apply error handling to all images in blog content
            document.addEventListener('DOMContentLoaded', function() {
                const contentImages = document.querySelectorAll('.markdown-content img');
                contentImages.forEach(img => {
                    if (img instanceof HTMLImageElement) {
                        img.onerror = function() {
                            handleImageError(this, '/img/error-banner.png');
                        };
                    }
                });

                const codeBlocks = document.querySelectorAll('.markdown-content pre');
                
                codeBlocks.forEach((pre, index) => {
                    const container = document.createElement('div');
                    container.className = 'relative';
                    
                    if (pre.parentNode) {
                        pre.parentNode.insertBefore(container, pre);
                        container.appendChild(pre);
                    }
                    
                    const copyButton = document.createElement('button');
                    copyButton.className = 'bg-[#c5c1c0] hover:bg-gray-200 text-gray-700 px-2 py-1 text-sm ml-auto flex items-center gap-1 transition';
                    copyButton.innerHTML = '<i class="hn hn-paperclip-solid"></i>Copy';
                    copyButton.setAttribute('aria-label', 'Copy code to clipboard');
                    copyButton.setAttribute('data-code-index', index.toString());
                    
                    container.appendChild(copyButton);
                    
                    copyButton.addEventListener('click', async function() {
                        const code = pre.querySelector('code') || pre;
                        const textToCopy = code.textContent || '';
                        
                        try {
                            await navigator.clipboard.writeText(textToCopy);
                            
                            const originalContent = copyButton.innerHTML;
                            copyButton.innerHTML = '<i class="hn hn-check-solid"></i>Copied!';
                            copyButton.classList.add('copied');
                            copyButton.className = 'bg-[#c5c1c0] hover:bg-gray-200 text-gray-700 px-2 py-1 text-sm ml-auto flex items-center gap-1 transition';
                            setTimeout(() => {
                                copyButton.innerHTML = originalContent;
                                copyButton.classList.remove('copied');
                                copyButton.className = 'bg-[#c5c1c0] hover:bg-gray-200 text-gray-700 px-2 py-1 text-sm ml-auto flex items-center gap-1 transition';
                            }, 2000);
                            
                        } catch (err) {
                            console.error('Failed to copy code: ', err);
                            
                            const textArea = document.createElement('textarea');
                            textArea.value = textToCopy;
                            textArea.style.position = 'fixed';
                            textArea.style.left = '-999999px';
                            document.body.appendChild(textArea);
                            textArea.focus();
                            textArea.select();
                            
                            try {
                                document.execCommand('copy');
                                copyButton.innerHTML = '<i class="hn hn-check-solid"></i>Copied!';
                                copyButton.classList.add('copied');
                                copyButton.className = 'bg-[#c5c1c0] hover:bg-gray-200 text-gray-700 px-2 py-1 text-sm ml-auto flex items-center gap-1 transition';
                                setTimeout(() => {
                                    copyButton.innerHTML = '<i class="hn hn-paperclip-solid"></i>Copy';
                                    copyButton.classList.remove('copied');
                                    copyButton.className = 'bg-[#c5c1c0] hover:bg-gray-200 text-gray-700 px-2 py-1 text-sm ml-auto flex items-center gap-1 transition';
                                }, 2000);
                            } catch (fallbackErr) {
                                console.error('Fallback copy failed: ', fallbackErr);
                                copyButton.innerHTML = '<span class="icon">‚ùå</span>Failed';
                                copyButton.className = 'bg-[#c5c1c0] hover:bg-gray-200 text-gray-700 px-2 py-1 text-sm ml-auto flex items-center gap-1 transition';
                                setTimeout(() => {
                                    copyButton.innerHTML = '<i class="hn hn-paperclip-solid"></i>Copy';
                                    copyButton.className = 'bg-[#c5c1c0] hover:bg-gray-200 text-gray-700 px-2 py-1 text-sm ml-auto flex items-center gap-1 transition';
                                }, 2000);
                            }
                            
                            document.body.removeChild(textArea);
                        }
                    });
                });

                // TOC generation
                const tocList = document.getElementById('toc-list');
                if (tocList) {
                    // Add "Index" link at the top
                    const indexLi = document.createElement('li');
                    indexLi.className = 'ml-0';
                    const indexA = document.createElement('a');
                    indexA.href = '#';
                    indexA.textContent = 'Index';
                    indexA.className = 'hover:underline text-gray-700 font-medium';
                    indexLi.appendChild(indexA);
                    tocList.appendChild(indexLi);

                    const content = document.querySelector('.markdown-content');
                    if (content) {
                        const headings = content.querySelectorAll('h1, h2, h3');
                        // Clear previous TOC except the Index
                        // Remove all except the first child (Index)
                        while (tocList.children.length > 1) {
                            if (tocList.lastChild) {
                                tocList.removeChild(tocList.lastChild);
                            }
                        }
                        headings.forEach((heading, idx) => {
                            if (!heading.id) {
                                heading.id = `heading-${idx}-${heading.textContent.replace(/\s+/g, '-').toLowerCase()}`;
                            }
                            const li = document.createElement('li');
                            li.className = `ml-${(heading.tagName === 'H2' ? 2 : heading.tagName === 'H3' ? 4 : 0)}`;
                            const a = document.createElement('a');
                            a.href = `#${heading.id}`;
                            a.textContent = heading.textContent;
                            a.className = 'hover:underline text-gray-700 font-medium';
                            li.appendChild(a);
                            tocList.appendChild(li);
                        });
                    }
                }
            });
        </script>
    </body>
</html>