---
import Layout from "../layouts/Layout.astro"
import "../css/index.css"

import CategoriesGetter from "../components/index/categoriesGetter.astro"
import RecentPosts from "../components/index/recentPosts.astro"
import RandomPostGetter from "../components/index/randomPostGetter.astro"

---

<Layout 
  title="AstronautMarkus Blog - Technology, Programming & Personal Experiences"
  description="Personal blog of Marcos Reyes (AstronautMarkus) about technology, programming, IT solutions, tutorials, and personal experiences in software development."
  image="/img/banner-en.png"
  imageAlt="AstronautMarkus - Technology Blog"
  type="website"
  tags={["technology", "programming", "blog", "tutorials", "software development", "IT", "web development", "marcos reyes", "astronautmarkus"]}
>
  <section class="section">
    <div class="banner-index">
      <img 
        src="/img/banner-en.png" 
        alt="Banner AstronautMarkus - Technology Blog"
      />
    </div>
  </section>

  <section class="section">
    <div class="container">
      <div class="columns">
        <div class="column is-8">
          <div class="content">
            <h1 class="title is-2">Welcome, travelers!</h1>
            <p class="subtitle">Welcome to AstronautMarkus blog, a place for technology enthusiasts and curious minds.</p>

            <h1 class="title is-4">Interesting Posts</h1>
            
            <RandomPostGetter />

          </div>
        </div>

        <div class="column is-4">
          <div class="box">
            <h3 class="title is-5">About blog</h3>
            <div class="content">
              <p>
                In this blog you can read articles related to programming, systems administration, networking, IT solutions, tutorials based on my personal experience as a software developer and systems administrator.
              </p>
            </div>
          </div>

          <CategoriesGetter />

          <RecentPosts />
        </div>
      </div>
    </div>
  </section>
</Layout>