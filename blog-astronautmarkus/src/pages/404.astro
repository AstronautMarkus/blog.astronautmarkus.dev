---
import Layout from "../layouts/Layout.astro"
---
<Layout 
  title="404 - Page Not Found"
  description="The page you are looking for does not exist. Please check the URL or return to the homepage."
  image="/img/banner-en.png"
  imageAlt="AstronautMarkus - Technology Blog"
  type="website"
>
  <section class="w-full py-16 mt-12">
    <div class="max-w-2xl mx-auto px-4">
      <div class="bg-[#c5c1c0] shadow p-8 shadow-lg flex flex-col items-center">
        <h1 class="text-6xl font-bold text-red-800 mb-4">404</h1>
        <h2 class="text-2xl font-semibold mb-2 text-gray-900">Page Not Found</h2>
        <p class="text-lg text-gray-700 mb-6 text-center">
          The page you are looking for does not exist.<br />
          Please check the URL or return to the homepage.
        </p>
        <a href="/" class="px-5 py-2 text-base bg-gray-800 text-white font-semibold hover:bg-gray-900 transition shadow-lg cursor-pointer">
          Go to Homepage
        </a>
      </div>
    </div>
  </section>
</Layout>